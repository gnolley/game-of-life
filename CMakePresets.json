{
  "version": 2,
  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-debug",
      "inherits": "windows-base",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-release",
      "inherits": "windows-base",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "x64 Debug",
      "inherits": "windows-debug",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "ARM64 Debug",
      "inherits": "windows-debug",
      "architecture": {
        "value": "arm64",
        "strategy": "external"
      }
    },
    {
      "name": "x64 Release",
      "inherits": "windows-release",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "ARM64 Release",
      "inherits": "windows-release",
      "architecture": {
        "value": "arm64",
        "strategy": "external"
      }
    }
  ]
}